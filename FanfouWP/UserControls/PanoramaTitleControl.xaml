<UserControl x:Class="FanfouWP.UserControls.PanoramaTitleControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">
    
    <Grid x:Name="LayoutRoot" >
        <Image HorizontalAlignment="Left" Margin="10,64,0,0" VerticalAlignment="Top" Height="42" Width="180" Source="/Assets/fanfou_beta.png"/>
        <Image HorizontalAlignment="Left" Height="42" Margin="195,64,0,0" VerticalAlignment="Top" Width="42" x:Name="AvatarImage" Source="{Binding profile_image_url}"/>
    </Grid>
</UserControl>