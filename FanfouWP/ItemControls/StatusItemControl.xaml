<UserControl x:Class="FanfouWP.ItemControls.StatusItemControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:fanfouwp ="clr-namespace:FanfouWP.ItemControls"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">
    <UserControl.Resources >
        <ResourceDictionary>
            <converter:SourceToTextConverter xmlns:converter="clr-namespace:FanfouWP.ItemControls.ValueConverter" x:Key="SourceToTextConverter" />
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid x:Name="LayoutRoot">
        <Grid Margin="0,5">
            <Image Source="{Binding user.profile_image_url}" HorizontalAlignment="Left" Height="64" Margin="20,10,0,0" VerticalAlignment="Top" Width="64" RenderTransformOrigin="0.8,0.42"/>
            <Rectangle Fill="{StaticResource PhoneAccentBrush}" HorizontalAlignment="Left" Margin="10,10,0,0" Width="5" Stroke="#00000000" StrokeThickness="0"/>
            <StackPanel VerticalAlignment="Top" Margin="89,10,10,0">
                <TextBlock Margin="10,0" TextWrapping="Wrap" Text="{Binding user.screen_name}" VerticalAlignment="Top" FontSize="26.667"/>
                <TextBlock Margin="10,5,10,0" TextWrapping="Wrap" Text="{Binding source,Converter={StaticResource SourceToTextConverter}}" VerticalAlignment="Top" Foreground="#DEB9B9B9" FontSize="18.667"/>
                <TextBlock Margin="10,5,10,0" TextWrapping="Wrap" Text="{Binding text}" FontSize="24"/>
            </StackPanel>
        </Grid>

    </Grid>
</UserControl>